{
    "compilerOptions": {
        "outDir": "build",
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node",
    },
    "exclude": [
        "node_modules",
        "mock"
    ]
}