// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Users {
    id         String       @id @default(uuid())
    firstName  String
    lastName   String
    email      String
    statements Statements[]
}

model Incomes {
    id          String     @id @default(uuid())
    label       String
    amount      Int
    type        String
    depositDate String
    isRecurring Boolean
    Statement   Statements @relation(fields: [statementId], references: [id])
    statementId String
}

model Expenses {
    id           String     @id @default(uuid())
    label        String
    amount       Int
    type         String
    withdrawDate String
    isRecurring  Boolean
    Statement    Statements @relation(fields: [statementId], references: [id])
    statementId  String
}

model Statements {
    id        String     @id @default(uuid())
    label     String
    createdOn DateTime   @default(now()) @db.Timestamp()
    incomes   Incomes[]
    expenses  Expenses[]
    User      Users      @relation(fields: [userId], references: [id])
    userId    String
}
